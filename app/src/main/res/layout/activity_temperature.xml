<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:background="#101010">

    <!-- 游댳 Lectura actual -->
    <TextView
        android:id="@+id/txtLectura"
        android:text="Temperatura actual: --.- 춿C"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#444"
        android:layout_marginVertical="16dp" />

    <!-- 游댳 Temperatura m칤nima -->
    <EditText
        android:id="@+id/txtMin"
        android:hint="Temperatura m칤nima (춿C)"
        android:inputType="numberDecimal"
        android:textColorHint="#AAAAAA"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- 游댳 Temperatura m치xima -->
    <EditText
        android:id="@+id/txtMax"
        android:hint="Temperatura m치xima (춿C)"
        android:inputType="numberDecimal"
        android:textColorHint="#AAAAAA"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

    <!-- 游댳 Bot칩n Guardar -->
    <Button
        android:id="@+id/btnGuardar"
        android:text="Guardar rangos"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:backgroundTint="#FF9800"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp" />

    <!-- 游댳 Bot칩n Silenciar alarma -->
    <Button
        android:id="@+id/btnSilenciar"
        android:text="Silenciar alarma"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:backgroundTint="#FF5722"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />

</LinearLayout>